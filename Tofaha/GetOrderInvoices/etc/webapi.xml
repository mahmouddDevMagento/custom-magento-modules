<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/order/invoices" method="POST">
        <service class="Tofaha\GetOrderInvoices\Api\OrderInvoicesInterface" method="getOrderInvoices"/>
        <resources>
            <resource ref="Magento_Sales::sales_invoice" />
        </resources>
    </route>

    <route url="/V1/invoice/generate-pdf" method="POST">
        <service class="Tofaha\GetOrderInvoices\Api\GenerateInvoicePdfInterface" method="generateInvoicePdf"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
