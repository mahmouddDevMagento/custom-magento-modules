<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="customerAddressDelete" xsi:type="object">BestResponseMedia\Console\Console\Command\CustomerAddressDelete</item>
            </argument>
        </arguments>
    </type>

    <type name="BestResponseMedia\Console\Model\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File
            </argument>
        </arguments>
    </type>
    <type name="BestResponseMedia\Console\Model\Logger\DeletedCustomerAddressesLogger">
        <arguments>
            <argument name="name" xsi:type="string">bb_deleted_customer_addresses
            </argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">BestResponseMedia\Console\Model\Logger\Handler
                </item>
            </argument>
        </arguments>
    </type>

</config>


